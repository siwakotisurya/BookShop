<div id="container">
<%if flash[:message]%>
	<h3><%=flash[:message]%></h3>
<%end%>
<%@books.each do |s|%>
	<div id="index_all">
	<h3><%=s.book_name%></h3>
	<p><%=s.book_description%></p>
	<p>$<%=s.book_price%></p>
	<p><%=s.book_author%></p>
	<br><br>
<%=link_to("Edit Shop",edit_book_shop_book_path(@book_shop,s.id))%>
<%=link_to("Delete Shop", book_shop_book_path(@book_shop,s.id),method: :delete, data: { confirm: 'Are you sure?' } )%>
</div>
<%end%>
</div>